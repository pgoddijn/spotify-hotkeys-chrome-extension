{
   "name": "Forked Spotify Web Player Hotkeys",
   "description": "Add keyboard shortcuts to pause, play next and previous tracks in Spotify",
   "version": "0.5.3",
   "manifest_version": 2,
   "icons": {
      "128": "icon.png"
   },

   "incognito": "split",
   "background": {
      "persistent": false,
      "scripts": [ "background.js" ]
   },
   "commands": {
      "next": {
         "description": "Next track",
         "suggested_key": "Ctrl+Shift+Period"
      },
      "play-pause": {
         "description": "Play/pause",
         "suggested_key": "Ctrl+Shift+M"
      },
      "previous": {
         "description": "Previous track",
         "suggested_key": "Ctrl+Shift+Comma"
      },
      "shuffle": {
         "description": "Shuffle"
      },
      "repeat": {
         "description": "Repeat"
      },
      "track-add": {
         "description": "Save track"
      }
   },
   "permissions": [ "https://open.spotify.com/*", "https://play.spotify.com/*" ]
}
